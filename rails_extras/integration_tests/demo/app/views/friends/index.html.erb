<h1>Listing friends</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Age</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @friends.each do |friend| %>
  <tr>
    <td><%= friend.name %></td>
    <td><%= friend.age %></td>
    <td><%= link_to 'Show', friend %></td>
    <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
    <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Friend', new_friend_path %>
<br>
<%= link_to 'js!', '#', :id => 'trigger' %>

<script type="text/javascript">
  $('#trigger').click(function(event) {
    event.preventDefault();
    setTimeout(function() {
      $('body').append('<p>javascript generated content</p>')
    }, 500);
  })
</script>
